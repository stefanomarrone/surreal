<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.surreal.samgen.handlers.CTLHandler"
            id="org.surreal.samgen.commands.ctl"
            name="SAM Generation">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.surreal.samgen.menus.sampleMenu"
               label="Surreal"
               mnemonic="S">
            <command
                  commandId="org.surreal.samgen.commands.ctl"
                  id="org.surreal.samgen.menus.sampleCommand"
                  label="CTL"
                  mnemonic="C">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.surreal.samgen.toolbars.sampleToolbar">
            <command
                  commandId="org.surreal.samgen.commands.ctl"
                  icon="icons/ctl.png"
                  id="org.surreal.samgen.toolbars.sampleCommand"
                  tooltip="Generation of the SAM model">
            </command>
         </toolbar>
      </menuContribution>
   </extension>


</plugin>
